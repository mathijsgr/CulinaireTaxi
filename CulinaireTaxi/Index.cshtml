@{
    Layout = "~/_HomeLayout.cshtml";
    Page.Title = "Bruiloft Planner";

    if (IsPost)
    {
        var uniquecode = Request.Form["list-code"];
        string GetList = ListProvider.GetListByToken(uniquecode);

