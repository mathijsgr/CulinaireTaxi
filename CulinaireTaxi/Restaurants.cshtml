@using Querys
@{
    Layout = "~/Shared/_Layout.cshtml";
    Page.Title = "Restaurant overzicht";

    var searchTerm = "";

    if (!Request.QueryString["search"].IsEmpty())
    {
        searchTerm = Request.QueryString["search"];
    }
}
<main>
    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background1.jpg"></div>
    </div>
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 center">
                    <h3><i class="mdi-content-send brown-text"></i></h3>
                    <h4>Restauranten Overzicht</h4>
                </div>
            </div>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">search</i>
                            <input id="icon_prefix" type="text" name="search" class="validate" value="@searchTerm">
                            <label for="icon_prefix">Zoeken..</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                @Helper.RestaurantSearch(searchTerm);
            </div>
        </div>
    </div>
    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background2.jpg"></div>
    </div>
</main>
