@using Querys
@{
    Layout = "~/Shared/_Layout.cshtml";
    Page.Title = "Taxi overzicht";

    TaxiCompanyQuerys tQuery = new TaxiCompanyQuerys();
    var taxis = tQuery.GetAllCompanies();
}
<main>
    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background1.jpg"></div>
    </div>
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 center">
                    <h3><i class="mdi-content-send brown-text"></i></h3>
                    <h4>Taxi's Overzicht</h4>
                </div>
            </div>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">search</i>
                            <input id="icon_prefix" type="text" class="validate">
                            <label for="icon_prefix">Zoeken..</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                @foreach (var taxi in taxis)
                {
                    <div class="col s3">
                        <div class="card medium">
                            <div class="card-image">
                                <img src="~/Assets/img/taxi_stock.jpg">
                                <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">@taxi.CompanyName</span>

                            </div>
                            <div class="card-content">
                                <p>
                                    @taxi.Description <br />
                                    @taxi.CompanyLocation
                                </p>
                            </div>
                            <div class="card-action">
                                <a class="waves-effect waves-light btn-small" href="#"><i class="material-icons left">local_taxi</i>Taxi boeken</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background2.jpg" alt="Unsplashed background img 3"></div>
    </div>
</main>
